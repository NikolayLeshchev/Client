<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="800.0" prefWidth="600.0" styleClass="pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.palto.controller.Main">
   <children>
      <VBox layoutY="-1.0" prefHeight="800.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="565.0">
               <children>
                  <Button fx:id="btnShowClients"  prefWidth="240.0" mnemonicParsing="false" onAction="#showClientsTable" text="УПРАВЛЕНИЕ КЛИЕНТАМИ">
                     <HBox.margin>
                        <Insets left="40.0" top="300.0" />
                     </HBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
               <children>
                  <Button fx:id="btnAddDeposit" prefWidth="240.0" mnemonicParsing="false" onAction="#addNewDeposit" text="УПРАВЛЕНИЕ ДЕПОЗИТАМИ">
                     <HBox.margin>
                        <Insets  left="40.0" top="300.0"  />
                     </HBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="300.0">

               <children>
                  <Button fx:id="btnCredit" prefWidth="240.0" mnemonicParsing="false" onAction="#addNewCredit" text="УПРАВЛЕНИЕ КРЕДИТАМИ">
                     <HBox.margin>
                        <Insets left="40.0" top="30.0" />
                     </HBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
               <children>
                  <Button fx:id="btnEndDay" prefWidth="240.0" mnemonicParsing="false" onAction="#finishTheDay" text="ЗАВЕРШИТЬ ДЕНЬ">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="40.0" top="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>

         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@style.css" />
      <URL value="@style.css" />
   </stylesheets>
</AnchorPane>
